@model RegisterModel
  
  @{
    ViewData["Title"] = "Register Page";
}
<!-- Register Section -->
    <section class=" white mt-lg-5 mb-5 " style="margin-top: 85px;">
      <div class=" h-100 d-flex mode jLstify-content-center align-items-center">
        <div class="container">
          <div class="row">
            <div class="col-xl-5 col-lg-6 col-md-10 col-sm-12 mx-auto mt-5">

              <!-- Form with header -->
              <div class="card wow fadeIn" data-wow-delay="0.3s">
                <div class="card-body pt-5 pb-5">

                  <!-- Header -->
                  <div class="form-header aqua-gradient">
                    <h3 class="font-weight-500 my-2 py-1"><i class="fas fa-user"></i> Register:</h3>
                  </div>

                  <!-- Body -->
                  
                  <div class="inline-ul text-center d-flex justify-content-center">
                    <a class="p-2 m-2 fa-lg gplus-ic aqua-gradient rounded"><i class="fab fa-google-plus-g white-text"></i></a>
                    <a class="p-2 m-2 fa-lg fb-ic aqua-gradient rounded"><i class="fab fa-facebook-f white-text"> </i></a>
                    <a class="p-2 m-2 fa-lg ins-ic aqua-gradient rounded"><i class="fab fa-instagram white-text"> </i></a>
                  </div>
                  <hr class="mt-4">
                  <form asp-area="Profile" asp-controller="Account" asp-action="Register" method="post">
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="md-form">
                      <i class="fa fa-user prefix text-default"></i>
                      <input type="text" asp-for="DisplayName" id="orangeForm-email" class="form-control">
                      <label for="orangeForm-email">Your Full Name</label>
                      <span asp-validation-for="DisplayName" class="text-danger" style="font-size: 15px;"></span>
                    </div>

                    <div class="md-form">
                      <i class="fas fa-envelope prefix text-default"></i>
                      <input type="text" asp-for="Email" id="orangeForm-email" class="form-control">
                      <label for="orangeForm-email">Your email</label>
                      <span asp-validation-for="Email" class="text-danger" style="font-size: 15px;"></span>
                    </div>

                    <div class="md-form">
                      <i class="fas fa-lock prefix text-default "></i>
                      <input type="password" asp-for="Password" id="orangeForm-pass" class="form-control">
                      <label for="orangeForm-pass">Your password</label>
                      <span asp-validation-for="Password" class="text-danger" style="font-size: 15px;"></span>

                    </div>

                    <div class="md-form">
                      <i class="fas fa-lock prefix text-default"></i>
                      <input type="password" asp-for="ConfirmPassword" id="orangeForm-pass" class="form-control">
                      <label for="orangeForm-pass">Confiram password</label>
                      <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 15px;"></span>

                    </div>

                    <div class="md-from mb-2">
                      <a asp-area="Profile" asp-controller="Account" asp-action="Login" class="text-default">Do you have an account </a>

                    </div>


                    <div class="text-center">
                      <button class="btn aqua-gradient btn-lg">Register</button>

                    </div>
                  </form>
                </div>
              </div>
              <!-- Form with header -->

            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Login Section -->